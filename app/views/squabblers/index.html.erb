<p id="notice"><%= notice %></p>

<div class="center">
  <div class="row">
        <% @squabblers.each do |squabbler| %>
    <div class="col-md-4">
      <div class="thumbnail">
          <%= image_tag squabbler.image.url(:medium) %>
        <div class="caption">
          <h3><%= squabbler.fname %></h3>
          <p>  <%= squabbler.alias %></p>
          <p>
            <a href="#" class="btn btn-primary" role="button">Show</a>
            <a href="#" class="btn btn-default" role="button">Edit</a>
            <a href="#" class="btn btn-default" role="button">Destroy</a>
            <a href="#" class="btn btn-default" role="button">Show</a>
          </p>
          <%= link_to 'Show', squabbler, class: "btn btn-link" %><br>
          <%= link_to 'Edit', edit_squabbler_path(squabbler), class: "btn btn-link" %><br>
          <%= link_to 'Destroy', squabbler, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>



<h1>Squabblers</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Fname</th>
      <th>Lname</th>
      <th>Alias</th>
      <th>Sole squabbler</th>
      <th>Team squabbler</th>
      <th>Judge</th>
      <th>Twitter handle</th>
      <th>Facebook</th>
      <th>Age</th>
      <th>Country</th>
      <th>Gender</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @squabblers.each do |squabbler| %>
      <tr>
          <td><%= image_tag squabbler.image.url(:thumb) %></td>
        <td><%= squabbler.fname %></td>
        <td><%= squabbler.lname %></td>
        <td><%= squabbler.alias %></td>
        <td><%= squabbler.sole_squabbler %></td>
        <td><%= squabbler.team_squabbler %></td>
        <td><%= squabbler.judge %></td>
        <td><%= squabbler.twitter_handle %></td>
        <td><%= squabbler.facebook %></td>
        <td><%= squabbler.age %></td>
        <td><%= squabbler.country %></td>
        <td><%= squabbler.gender %></td>
        <td><%= link_to 'Show', squabbler, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_squabbler_path(squabbler), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', squabbler, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

