<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-4">
    <div class="thumbnail">
    <%= image_tag @squabbler.image.url(:medium) %>
    </div>
    <h3><%= @squabbler.fname %> <%= @squabbler.lname %></h3>
    </div>
  <div class="col-md-4">
    <p>
      <strong>Fname:</strong>
      <%= @squabbler.fname %>
    </p>

    <p>
      <strong>Lname:</strong>
      <%= @squabbler.lname %>
    </p>

    <p>
      <strong>Alias:</strong>
      <%= @squabbler.alias %>
    </p>

    <p>
      <strong>Sole squabbler:</strong>
      <%= @squabbler.sole_squabbler %>
    </p>

    <p>
      <strong>Team squabbler:</strong>
      <%= @squabbler.team_squabbler %>
    </p>

    <p>
      <strong>Judge:</strong>
      <%= @squabbler.judge %>
    </p>

    <p>
      <strong>Twitter handle:</strong>
      <%= @squabbler.twitter_handle %>
    </p>

    <p>
      <strong>Facebook:</strong>
      <%= @squabbler.facebook %>
    </p>

    <p>
      <strong>Age:</strong>
      <%= @squabbler.age %>
    </p>

    <p>
      <strong>Country:</strong>
      <%= @squabbler.country %>
    </p>

    <p>
      <strong>Gender:</strong>
      <%= @squabbler.gender %>
    </p>
  </div>
</div>

<%= link_to 'Edit', edit_squabbler_path(@squabbler), class: "btn btn-link"  %> |
<%= link_to 'Back', squabblers_path, class: "btn btn-link"  %>
